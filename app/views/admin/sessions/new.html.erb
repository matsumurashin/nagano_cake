<h5>管理者ログイン</h5>

<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col-md-2">
      <div class="form-group">
          <div class="field">
            <%= f.label :"メールアドレス" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
         </div>
       </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-9">
      <div class="form-group">
        <div class="field">
          <%= f.label :"パスワード" %>
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="actions">
      <%= f.submit "ログイン", class: "bg-primary text-white rounded " %>
    </div>
  </div>
<% end %>
</div>

<%= render "admin/shared/links" %>
