<h4>
  <span class="bg-secondary">注文履歴詳細</span>
</h4>

<div class="container">
  <div class="row">
    <div class="col-10 mx-auto">
      <table cellpadding="15">
        <tr>
          <th>購入者</th>
          <td><%= @order.name %></td>
        </tr>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            〒<%= @order.postal_code %>
            <%= @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th>支払い方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-7">
      <table>
        <%# @order_detail.each do |order_detail| %> cart_item??
        <thead>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </thead>
        <tbody>
          <td><%= order_detail.name %></td>
          <td><%= order_detail.item.with_tax_price %></td>
          <td><%= order_detail.amount %></td>
          <td><%= order_detail.subtotal %></td>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>