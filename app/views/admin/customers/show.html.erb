<h4>  レイアウトメンターに聞く
  <span class="bg-secondary"><%= @customer.full_name %>さんの会員詳細</span>
</h4>

<div class="container">
  <div class="row">
    <div class="col-6 mx-auto">
      <table>
        <tr>
          <th>会員ID</th>
          <td><%= @customer.full_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @customer.full_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
          </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td class="text-success">
            <% if @customer.is_deleted %>
            <b>無効</b>
            <% else %>
            <b>有効</b>
            <% end %>
            </td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "mx-auto d-block btn btn-success mt-3" %>
    </div>
    <div class="col-3">
      <%= link_to "注文履歴一覧を見る", admin_customers_path, class: "mx-auto d-block btn btn-primary mt-3" %>
    </div>
  </div>
</div>