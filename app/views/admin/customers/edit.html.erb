<h4>
  <span class="bg-secondary">さんの会員情報編集</span>
</h4>

<table>
  <tr>
    <th scope="col">会員ID</th>
    <td><%= @customer.id %></td>
  </tr>
  <%= form_with model: @customer, url: admin_customer_path(@customer.id) do |f| %>
  <tr>
    <th scope="col">氏名</th>
    <td><%= f.text_field :first_name %></td>
    <td><%= f.text_field :last_name %></td>
  </tr>
  <tr>
    <th scope="col">フリガナ</th>
    <td><%= f.text_field :first_name_kana %></td>
    <td><%= f.text_field :last_name_kana %></td>
  </tr>
  <tr>
    <th scope="col">郵便番号</th>
    <td><%= f.text_field :postal_code %></td>
    <td></td>
  </tr>
  <tr>
    <th scope="col">住所</th>
    <td><%= f.text_field :address %></td>
    <td></td>
  </tr>
  <tr>
    <th scope="col">電話番号</th>
    <td><%= f.text_field :telephone_number %></td>
    <td></td>
  </tr>
  <tr>
    <th scope="col">メールアドレス</th>
    <td><%= f.text_field :email %></td>
    <td></td>
  </tr>
</table>

<%= f.submit "変更を保存", class: "mx-auto d-block btn btn-success mt-3" %>

  <% end %>
