<h4>
  <span class="bg-secondary">商品詳細</span>
</h4>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <%= image_tag @item.get_image(300,300) %>
    </div>
    <div class="col-md-6 mx-auto">
      <table>
        <tr>
          <th class="pb-5">商品名</th>
          <td class="pb-5"><%= @item.name %></td>
        </tr>
        <tr>
          <th class="pb-5">商品説明</th>
          <td class="pb-5"><%= @item.introduction %></td>
        </tr>
        <tr>
          <th class="pb-5">税込価格<br>(税抜価格)</th>
          <td class="pb-5"><%= @item.with_tax_price %>(<%= @item.price %>)円</td>
        </tr>
      </table>
    </div>
  </div>
</div>

<%= link_to "編集する", edit_admin_item_path(@item.id), class: "mx-auto d-block btn btn-success mt-3" %>