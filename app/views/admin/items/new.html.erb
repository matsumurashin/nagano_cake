<h4>
  <span class="bg-secondary">商品新規登録</span>
</h4>

<%= form_with model: @item do |f| %>
<div class="container">
  <div class="row">
    <div class="mx-auto">
        <table cellpadding="5">
          <tr>
            <th>商品画像</th>
            <td><%= f.file_field :image, accept: "image/*" %></td>
          </tr>
          <tr>
            <th>商品名</th>
            <td><%= f.text_field :name, :placeholder => "商品名" %></td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td><%= f.text_area :introduction, :placeholder => "ここに説明文を記述します" %></td>
          </tr>
          <tr>
            <th>税抜価格</th>
            <td><%= f.text_field :price %>円</td>
          </tr>
        </table>
<%= f.submit "新規登録", class: "mx-auto d-block btn btn-success mt-3" %>

<% end %>

    </div>
  </div>
</div>