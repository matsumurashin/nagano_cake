<h2>ログイン</h2>

<h5>会員の方はこちらからログイン</h5>

<%= form_with model: @customer, url: session_path(resource_name) do |f| %>

  <div class="field">
    <%= f.label :"メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード" %>
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>
<% end %>


  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
  <h5>会員登録がお済みでない方</h5>
  <%= link_to "こちら", new_customer_registration_path %>
  <p>から新規登録を行なってください。</p>

<%= render "devise/shared/links" %>
