<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/3405b10951.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <a class="navbar-brand p-3" href="/"><%= image_tag('logo-white.png') %></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <%= search_form_for @search, products_path do |f| %>
            <%= f.text_field :name_cont, placeholder: 'Search' %>
            <%= f.submit ("検索")　%>
          <% end %>

          <div class="collapse navber-collapse" id="navberNavDropdown">
            <ul class="navber-nav ml-auto">
            <% if customer_signed_in? %>
            <li class="nav-item">
              <%= link_to "マイページ", public_cutomers_show_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "商品一覧", public_items_index_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "カート",  public_cart_items_index_path, class: 'nav-link text-dark'%>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト",  destroy_admin_session_path, method: :delete, class: 'nav-link text-dark' %>
            </li>

            <% else %>
            <li class="nav-item">
              <%= link_to "About", public_about_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "商品一覧",  public_items_index_path, class: 'nav-link text-dark'  %>
            </li>
            <li class="nav-item">
              <%= link_to "新規登録",  public_customers_sign_up_path, class: 'nav-link text-dark'  %>
            </li>
            <li class="nav-item">
               <%= link_to "ログイン", new_customer_session_path, class: 'nav-link text-dark'   %>
             </li>
             <% end %>
             </ul>
           </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>