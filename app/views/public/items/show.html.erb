  <div class="container mx-auto">
    <div class="row">
      <div class="col-6 mx-auto">
        <%= image_tag @item.get_image(300,300) %>
      </div>

      <div class="col-4">
        <div class="mt-3">
          <b><%= @item.name %></b><br>
        </div>
        <div class="mt-3">
          <%= @item.introduction %><br>
        </div>
        <div class="mt-3">
          <b>¥<%= @item.with_tax_price %></b>
          <small>(税込)</small>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-3 ml-auto">
        <%= form_with model: @item do |f| %>
          <p>数量を選択してください。</p>
          <%= f.select :amount, *[1..10] %>
        <% end %>
      </div>
      <div class="col-3 px-0">
        <%= link_to "カートに入れる", cart_items_path, class: "mx-auto d-block btn btn-success mt-3" %>
      </div>
    </div>
  </div>