<h4>商品一覧</h4>

<div class="container">
  <div class="row">
    <% @item.each do |item| %>
    <div class="col-3">
      <%= link_to image_tag(item.get_image(200,200)), item_path(item.id) %><br>
      <%= link_to item.name,item_path(item.id) %><br>
      ¥<%= item.price %>
    </div>
    <% end %>
  </div>
  <%= paginate @item %>

</div>