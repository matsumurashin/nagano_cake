<div class="container">
  <div class="row">
    <div class="col-4">
      <h4>
        <span class="bg-secondary">ショッピングカート</span>
      </h4>
    </div>
    <div class="col-4">

    </div>
  </div>
</div>

<div class="row">
  <div class="col-5 mx-auto">
    <table>
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @cart_item.each do |cart_item| %>
        <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= cart_item.item.with_tax_price %></td>
          <td><%= cart_item.amount %></td>
          <td><%= cart_item.subtotal %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>


